@model List<WebApplication1.Models.Domain.Employee>

@{
}

<h1>Employees</h1>
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Email</th>
			<th>Salary</th>
			<th>Birth Date</th>
			<th>Position</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var employee in Model)
		{
			<tr>
				<td>@employee.Id</td>
				<td>@employee.Name</td>
				<td>@employee.Email</td>
				<td>@employee.Salary</td>
				<td>@employee.BirthDate.ToString("dd-MM-yyyy")</td>
				<td>@employee.Position</td>
				<td><a href="Emloyees/View/@employee.Id">View</a></td>
			</tr>
		}
	</tbody>
</table>